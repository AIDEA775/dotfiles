# We use the global settings as a shortcut to define our own separator.
# Based on the default i3blocks config file.
command=/usr/lib/i3blocks/$BLOCK_NAME


full_text=
align=center
color=#FFFDD0
separator=false
separator_block_width=5

[separator]

full_text=
align=centerh


[keyboard]

label=⌨
command=~/.i3/i3blocks/blocklets/keyboard.sh
color=#00BCD4
interval=once

[separator]


[volume]

label= 
command=~/.i3/i3blocks/blocklets/volume.sh
color=#FFEB3B
interval=once
signal=10


[separator]


[weather]

full_text= 
command=~/.i3/i3blocks/blocklets/iconweather.sh "SAM|AR|AR005|CORDOBA"
interval=30
color=#E91E63


[separator]


[disk-home]

label= 
command=~/.i3/i3blocks/blocklets/disk $HOME
color=#4DB6AC
interval=30


[separator]


[battery]

color=#E040FB
command=~/.i3/i3blocks/blocklets/battery
instance=0
interval=30


[separator]


[download]

label=⇃
command=~/.i3/i3blocks/blocklets/bandwidth.sh rx
align=left
min_width=⇃100kB/s
color=#f44336
interval=1 # IMPORTANT

[upload]

label=↿
command=~/.i3/i3blocks/blocklets/bandwidth.sh tx
min_width=↿100kB/s
align=right
color=#8BC34A
interval=1 # IMPORTANT


[separator]


[Date]

label= 
command=date '+%a %d %b, %Y'; [[ -z "${BLOCK_BUTTON}" ]] || i3-msg "exec --no-startup-id gsimplecal"
color=#03A9F4
interval=30


[separator]


[Time]

label= 
command=date '+%H:%M:%S'
#command=~/.i3/i3blocks/blocklets/date.sh
color=#B0BEC5
interval=1


[separator]

full_text= 
align=center
separator=false
